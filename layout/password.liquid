<!doctype html>
<html class="no-js geo-ready" lang="{{ shop.locale }}">
<head>
  {% include 'standard-meta-tags' %}

  <meta name="robots" content="noindex, nofollow">
  <link rel="canonical" href="{{ canonical_url }}">

  <meta name="google-site-verification" content="au5kRB9JrxvwpJv2tpcsq2rz9pULNJ4TzpHKx06k2Rg" />

  <meta name="robots" content="noindex, nofollow">

  {% if settings.favicon != blank %}
    <link rel="shortcut icon" href="{{ settings.favicon | img_url: '32x32' }}" type="image/png">
  {% endif %}

  <title>
    {{ shop.name }} &ndash; {{ 'general.password_page.opening_soon' | t }}
  </title>

  {% if page_description %}
    <meta name="description" content="{{ page_description | escape }}">
  {% endif %}

  {% include 'social-meta-tags' %}

  <style>
    {% include 'critical.min.css' %}
  </style>

  {{ 'main.min.css' | asset_url | stylesheet_tag }}

  <script src="{{ 'vendors.min.js' | asset_url }}" defer="defer"></script>

  <script src="{{ 'main.min.js' | asset_url }}" defer="defer"></script>

  <script src="{{ 'password.js' | asset_url }}" defer="defer"></script>

  {{ content_for_header }}
</head>

<body class="template-password">
  <div class="mw center ph4 tc pdv">
    {{ content_for_layout }}

    {% comment %} {% form 'storefront_password' %}
      {{ form.errors | default_errors }}
      <label for="password" class="label--hidden">{{ 'general.password_page.login_form_password_label' | t }}</label>
      <div class="input-group password__input-group">
        <input type="password" name="password" id="Password" class="input-group__field input--content-color" placeholder="{{ 'general.password_page.login_form_password_placeholder' | t }}">
        <span class="input-group__btn">
          <button type="submit" name="commit" class="btn">
            {{ 'general.password_page.login_form_submit' | t }}
          </button>
        </span>
      </div>
    {% endform %} {% endcomment %}
  </div>
</body>
</html>
