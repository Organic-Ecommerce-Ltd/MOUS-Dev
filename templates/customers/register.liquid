<div class="page mw-small pdh pdv">
  <div class="note success dn" id="ResetSuccess">
    {{ 'customer.recover_password.success' | t }}
  </div>

  <div class="admin-form">
    {% form 'create_customer' %}
      <input type="hidden" name="return_to" value="/account"/>

      <h1 class="tc">{{ 'customer.register.title' | t }}</h1>

      <p class="tc">{{ 'customer.register.subtext' | t }}</p>

      {{ form.errors | default_errors }}

      <p>
        <label for="FirstName">{{ 'customer.register.first_name' | t }}</label>
        <input type="text" name="customer[first_name]" id="FirstName" {% if form.first_name %}value="{{ form.first_name }}"{% endif %} autofocus required>
      </p>

      <p>
        <label for="LastName">{{ 'customer.register.last_name' | t }}</label>
        <input type="text" name="customer[last_name]" id="LastName" {% if form.last_name %}value="{{ form.last_name }}"{% endif %} required>
      </p>

      <p>
        <label for="Email">{{ 'customer.register.email' | t }}</label>
        <input type="email" name="customer[email]" id="Email" class="{% if form.errors contains 'email' %} input--error{% endif %}" {% if form.email %} value="{{ form.email }}"{% endif %} autocorrect="off" autocapitalize="off">
      </p>

      <p>
        <label for="CreatePassword">{{ 'customer.register.password' | t }}</label>
        <input type="password" name="customer[password]" id="CreatePassword" class="{% if form.errors contains 'password' %} input--error{% endif %}">
      </p>

      <div id="accepts_marketing " class="marketing-opt">
        <input type="checkbox" name="customer[accepts_marketing]" id="marketing" class="marketing-opt__input" />
        <label for="marketing" class="marketing-opt__label">Keep me up to date on news and exclusive offers</label>
      </div>

      <p class="tc">
        <input type="submit" value="{{ 'customer.register.submit' | t }}" class="btn">
      </p>
    {% endform %}
  </div>
</div>
