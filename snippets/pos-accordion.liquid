<div class="pos-details__accordions pos-accordions">
  {% for i in (1..3) %}
    {% assign accordion_copy = 'p_accordion_#' | replace: '#', i %}
    {% assign accordion_copy_split = _[accordion_copy] | split: '=====' %}

    {% capture accordion_content %}
      {% if forloop.index == 1 %}
        {% for item in accordion_copy_split %}
          <li class="bulleted">{{ item | strip }}</li>
        {% endfor %}
      {% else %}
        {% for item in accordion_copy_split %}
          {% assign item_title = item | split: '+++' | first | strip %}
          {% assign item_description = item | split: '+++' | last | strip | split: '\n' %}

          <li>
            <div class="title">{{ item_title }}</div>
            <div class="description">
              {% for item_description_para in item_description %}
                <p>{{- item_description_para | strip -}}</p>
              {% endfor %}
            </div>
          </li>
        {% endfor %}
      {% endif %}
    {% endcapture %}

    {% assign accordion_title = 'products.product.accordions.title_#' | replace: '#', forloop.index | t %}

    <div
      class="pos-accordions__accordion pos-accordion is-hidden"
      pos="accordion-container"
    >
      <button
        class="pos-accordion__title"
        id="accordion{{ forloop.index }}"
        aria-expanded="false"
        aria-controls="accordion-copy{{ forloop.index }}"
        pos="accordion-toggle"
      >
        {{ accordion_title }}

        <span class="pos-accordion__toggle pos-arrow-down"></span>
      </button>

      <div
        class="pos-accordion__copy"
        id="accordion-copy{{ forloop.index }}"
        role="region"
        aria-labelledby="accordion{{ forloop.index }}"
      >
        <ul{% if forloop.index == 2 and dynamic_json_metafield %} pos="dynamic-specifications"{% endif %}>
          {{ accordion_content }}
        </ul>
      </div>
    </div>
  {% endfor %}
</div>