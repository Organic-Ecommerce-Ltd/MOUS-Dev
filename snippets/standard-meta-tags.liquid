{%- comment -%} Don't index or follow various templates, anything on the DEV store or Hidden products {%- endcomment -%}
{% if template contains 'account' or template == 'cart' or template contains 'thank-you' or detect_store == 'DEV' or product.type == 'Hidden' %}
  <meta name="robots" content="noindex, nofollow" />
{% endif %}

{%- comment -%} Don't index certain products {%- endcomment -%}
{% if template contains 'product' %}
  {% include 'detect-product' %}

  {% if is_hidden_from_collections %}
    <meta name="robots" content="noindex">
  {% endif %}
{% endif %}

{%- comment -%} Generic meta tags {%- endcomment -%}
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
<meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1.0,user-scalable=0">
<meta name="theme-color" content="#000">
<meta name="google-site-verification" content="fWGAxCqVBGJT-ebhu8xwBk533yUfbcy6zHBZ--23gS0" />
